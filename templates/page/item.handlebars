	{{> header}}
	<div data-role="content" data-iscroll class="scroll">
		{{{image image_url 250 250 }}}
		<h3>description</h3>
		<p>
			{{description}}
		</p>
		<h3>Tags</h3>
		<p class="tags">
			{{{split tags}}}
		</p>
	</div>
	{{> footer}}
</div>